###########
##MODULES##
###########

[module/date]
type = internal/date
date = %m-%d%
time = %H:%M
interval = 2.0
label = %date% %time%

[module/i3]
type = internal/i3
reverse-scroll = true
wrapping-scroll = false
scroll-up = "#i3.prev"
scroll-down = "#i3.next"

format = <label-state>
label-focused = %index%
label-focused-padding = 1.5
label-unfocused = %index%
label-urgent = %index%
label-separator = |

[module/pulseaudio]
type = internal/pulseaudio
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = ïª€ %percentage%%
label-muted-foreground = #666
ramp-volume-0 = ï©¾
ramp-volume-1 = ï©¿
ramp-volume-2 = ï©½
click-right = pavucontrolpowermenu
;click-left = mute

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = ï¥³ %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 3
format = <label>
label = ï¦… %percentage-sum%%

[module/filesystem]
type = internal/fs
mount-0 = /
interval = 30
label-mounted = ï¦Š %percentage_used%%

[module/cputemp]
type = internal/temperature
interval = 3
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon0/temp1_input
warn-temperature = 66
format = <label>
format-warn = <label-warn>
label = %temperature%
label-warn = %temperature%
label-warn-foreground = #f00

[module/services_running]
type = custom/script
exec = systemctl --type=service --state=running list-units | grep running | wc -l
tail = true
interval = 12
format = <label>
label = ï¦© %output%

